---
import { Image } from "astro:assets";
import type { Service } from "~/lib/db/schema";
import { cn } from "~/lib/utils";

type Props = {
  service: Pick<Service, "name" | "icon"> & {
    iconDark?: string | null;
  };
};

const { service } = Astro.props;
---

<Image
  src={service.icon}
  alt={`${service.name} icon`}
  width={32}
  height={32}
  layout="fixed"
  fit="contain"
  class={cn(service.iconDark && "dark:hidden", "h-8 w-8 object-contain")}
/>
{
  service.iconDark && (
    <Image
      src={service.iconDark}
      alt={`${service.name} icon dark`}
      width={32}
      height={32}
      layout="fixed"
      fit="contain"
      class="hidden dark:block h-8 w-8 object-contain"
    />
  )
}
